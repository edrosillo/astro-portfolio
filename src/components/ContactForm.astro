<form id="contact-form" class="contact-form">
    <div class="form-group">
        <label for="name">NAME</label>
        <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="YOUR NAME"
        />
    </div>

    <div class="form-group">
        <label for="email">EMAIL</label>
        <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="YOUR@EMAIL.COM"
        />
    </div>

    <div class="form-group">
        <label for="message">MESSAGE</label>
        <textarea
            id="message"
            name="message"
            required
            rows="5"
            placeholder="ENTER YOUR MESSAGE..."></textarea>
    </div>

    <!-- Cloudflare Turnstile Widget -->
    <div class="cf-turnstile" data-sitekey="0x4AAAAAACFH9sKO9AyATBiC"></div>

    <button type="submit" class="submit-btn">
        <span class="btn-text">SEND MESSAGE</span>
        <span class="btn-icon">→</span>
    </button>

    <div id="form-status" class="form-status"></div>
</form>

<!-- Success Modal -->
<dialog id="success-modal" class="retro-modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="modal-title">SYSTEM MEMO</span>
            <button class="close-modal-btn" aria-label="Close">×</button>
        </div>
        <div class="modal-body">
            <div class="icon-check">✓</div>
            <p class="modal-message">TRANSMISSION RECEIVED<br>SUCCESSFULLY.</p>
            <p class="modal-subtext">WE WILL RESPOND SHORTLY.</p>
        </div>
        <div class="modal-footer">
            <button class="modal-action-btn">ACKNOWLEDGE</button>
        </div>
    </div>
</dialog>

<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer
></script>

<script lang="ts">
   const form = document.getElementById("contact-form") as HTMLFormElement | null;
    const statusDiv = document.getElementById("form-status");
    const modal = document.getElementById("success-modal") as HTMLDialogElement | null;
    const closeModalBtn = document.querySelector(".close-modal-btn");
    const actionModalBtn = document.querySelector(".modal-action-btn");

    if (modal) {
        const closeFn = () => {
            modal.close();
        };

        if (closeModalBtn) closeModalBtn.addEventListener("click", closeFn);
        if (actionModalBtn) actionModalBtn.addEventListener("click", closeFn);
        
        // Close on backdrop click
        modal.addEventListener('click', (event) => {
            if (event.target === modal) {
                modal.close();
            }
        });
    }

    if (form && statusDiv) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            const turnstileToken = formData.get("cf-turnstile-response");

            if (!turnstileToken) {
                statusDiv.textContent = "Please complete the security check.";
                statusDiv.className = "form-status error";
                return;
            }

            statusDiv.textContent = "SENDING...";
            statusDiv.className = "form-status sending";

            try {
                const response = await fetch("/api/submit-contact", {
                    method: "POST",
                    body: formData,
                });

                const result = await response.json();

                if (result.success) {
                    statusDiv.textContent = "";
                    statusDiv.className = "form-status";
                    form.reset();
                    if (modal && typeof modal.showModal === "function") {
                        modal.showModal();
                    } else {
                        // Fallback
                        alert("MESSAGE SENT SUCCESSFULLY!");
                    }
                } else {
                    statusDiv.textContent =
                        "ERROR: " + (result.error || "UNKNOWN ERROR");
                    statusDiv.className = "form-status error";
                }
            } catch (error) {
                statusDiv.textContent = "NETWORK ERROR. PLEASE TRY AGAIN.";
                statusDiv.className = "form-status error";
            }
        });
    }
</script>

<style>
    .contact-form {
        max-width: 600px;
        margin: 0 auto;
        background: var(--color-surface);
        padding: 3rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .form-group {
        margin-bottom: 2rem;
    }

    label {
        display: block;
        font-family: var(--font-heading);
        font-size: 0.9rem;
        color: var(--color-text-muted);
        margin-bottom: 0.5rem;
    }

    input,
    textarea {
        width: 100%;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid #333;
        border-radius: 4px;
        color: var(--color-text);
        font-family: var(--font-body);
        font-size: 1rem;
        transition: all 0.3s;
    }

    input:focus,
    textarea:focus {
        outline: none;
        border-color: var(--color-primary);
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.1);
    }

    .submit-btn {
        width: 100%;
        padding: 1rem;
        background: transparent;
        border: 1px solid var(--color-primary);
        color: var(--color-primary);
        font-family: var(--font-heading);
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }

    .submit-btn:hover {
        background: var(--color-primary);
        color: var(--color-bg);
    }

    .form-status {
        margin-top: 1.5rem;
        text-align: center;
        font-family: var(--font-heading);
        font-size: 0.9rem;
        min-height: 1.5rem;
    }

    .form-status.success {
        color: var(--color-secondary);
    }
    .form-status.error {
        color: #ff0055;
    }
    .form-status.sending {
        color: var(--color-text-muted);
    }

    .cf-turnstile {
        margin-bottom: 2rem;
    }

    /* Modal Styles */
    .retro-modal {
        background: transparent;
        border: none;
        padding: 0;
        margin: auto;
        color: var(--color-text);
        max-width: 90vw;
        width: 400px;
        backdrop-filter: blur(5px);
    }

    .retro-modal::backdrop {
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
    }

    .modal-content {
        background: var(--color-surface);
        border: 2px solid var(--color-primary);
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
        display: flex;
        flex-direction: column;
    }

    .modal-header {
        background: var(--color-primary);
        color: var(--color-bg);
        padding: 0.5rem 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: var(--font-heading);
    }

    .modal-title {
        font-weight: bold;
        letter-spacing: 1px;
    }

    .close-modal-btn {
        background: none;
        border: none;
        color: var(--color-bg);
        font-size: 1.5rem;
        cursor: pointer;
        line-height: 1;
    }

    .modal-body {
        padding: 2rem;
        text-align: center;
        font-family: var(--font-mono);
    }

    .icon-check {
        font-size: 3rem;
        color: var(--color-secondary);
        margin-bottom: 1rem;
        text-shadow: 0 0 10px var(--color-secondary);
    }

    .modal-message {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: var(--color-text);
    }

    .modal-subtext {
        font-size: 0.8rem;
        color: var(--color-text-muted);
    }

    .modal-footer {
        padding: 1rem;
        display: flex;
        justify-content: center;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .modal-action-btn {
        background: transparent;
        border: 1px solid var(--color-primary);
        color: var(--color-primary);
        padding: 0.5rem 2rem;
        font-family: var(--font-heading);
        cursor: pointer;
        transition: all 0.3s;
    }

    .modal-action-btn:hover {
        background: var(--color-primary);
        color: var(--color-bg);
    }
</style>

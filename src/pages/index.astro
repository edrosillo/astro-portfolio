---
import MainLayout from "../layouts/MainLayout.astro";
import HeroHeader from "../components/HeroHeader.astro";
import AboutMe from "../components/AboutMe.astro";
import GlitchText from "../components/GlitchText.astro";
import FeaturedWork from "../components/FeaturedWork.astro";
---

<MainLayout title="Eddie's Portfolio">
	<HeroHeader />

	<main class="container">
		<FeaturedWork />

		<section class="work-section">
			<header class="section-header fade-in-up">
				<GlitchText
					text="SKILL TREE"
					as="h2"
					class="section-title"
				/>
				<div class="decorative-line"></div>
			</header>

			<div class="services-grid">
				<a
					href="/graphic"
					class="service-card fade-in-up"
					style="transition-delay: 0.1s;"
				>
					<div class="card-bg"></div>
					<div class="card-content">
						<span class="service-number">01</span>
						<h3>Graphic Design</h3>
						<p>Brand Identity, Print, and Visual Design.</p>
						<span class="arrow">→</span>
					</div>
				</a>

				<a
					href="/motion"
					class="service-card fade-in-up"
					style="transition-delay: 0.2s;"
				>
					<div class="card-bg"></div>
					<div class="card-content">
						<span class="service-number">02</span>
						<h3>Motion Graphics</h3>
						<p>Animation, VFX, and Video Production.</p>
						<span class="arrow">→</span>
					</div>
				</a>

				<a
					href="/web"
					class="service-card fade-in-up"
					style="transition-delay: 0.3s;"
				>
					<div class="card-bg"></div>
					<div class="card-content">
						<span class="service-number">03</span>
						<h3>Web Development</h3>
						<p>Responsive Sites, UI/UX, and Front-end.</p>
						<span class="arrow">→</span>
					</div>
				</a>
			</div>
		</section>
	</main>

	<AboutMe />
</MainLayout>

<style>
	.work-section {
		padding: 4rem 0 8rem;
	}

	.section-header {
		margin-bottom: 4rem;
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.section-title {
		font-size: 2rem;
		color: var(--color-text);
		white-space: nowrap;
	}

	.decorative-line {
		height: 1px;
		background: linear-gradient(90deg, var(--color-primary), transparent);
		width: 100%;
		opacity: 0.5;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.service-card {
		display: block;
		background: var(--color-surface);
		padding: 2.5rem;
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
		position: relative;
		overflow: hidden;
	}

	.card-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: radial-gradient(
			circle at top right,
			rgba(0, 255, 255, 0.1),
			transparent 50%
		);
		opacity: 0;
		transition: opacity 0.4s;
	}

	.service-card:hover {
		transform: translateY(-10px);
		border-color: var(--color-primary);
		box-shadow: 0 20px 40px rgba(0, 255, 255, 0.1);
	}

	.service-card:hover .card-bg {
		opacity: 1;
	}

	.card-content {
		position: relative;
		z-index: 1;
	}

	.service-number {
		font-family: var(--font-heading);
		font-size: 4rem;
		color: rgba(255, 255, 255, 0.05);
		display: block;
		margin-bottom: 1rem;
		transition: color 0.3s;
		line-height: 1;
	}

	.service-card:hover .service-number {
		color: var(--color-primary);
	}

	.service-card h3 {
		font-family: var(--font-heading);
		font-weight: 700;
		font-size: 1.8rem;
		margin-bottom: 0.5rem;
		text-transform: none;
		color: var(--color-text);
	}

	.service-card p {
		color: var(--color-text-muted);
		margin-bottom: 2rem;
		font-size: 1.1rem;
	}

	.arrow {
		position: absolute;
		bottom: 0;
		right: 0;
		font-size: 2rem;
		opacity: 0;
		transform: translate(-20px, 0);
		transition: all 0.3s;
		color: var(--color-primary);
	}

	.service-card:hover .arrow {
		opacity: 1;
		transform: translate(0, 0);
	}
</style>

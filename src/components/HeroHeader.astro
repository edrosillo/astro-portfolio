---
import GlitchText from "./GlitchText.astro";
---

<header class="hero-header">
    <div class="synthwave-grid"></div>
    <div class="floating-shapes">
        <div class="shape cube"></div>
        <div class="shape pyramid"></div>
    </div>
    <div class="hero-fade"></div>
    <div class="container relative">
        <div class="hero-content">
            <div class="fade-in-up" style="transition-delay: 0.1s;">
                <GlitchText text="Hi, I'm Eddie." as="h1" class="hero-title" />
            </div>
            <div class="fade-in-up" style="transition-delay: 0.3s;">
                <h2 class="hero-subtitle">
                    Multimedia Designer & <span class="typing-text"></span><span class="cursor">|</span>
                </h2>
                <p class="hero-location">Based in the Greenville-Spartanburg Area, SC.</p>
            </div>
            
            <div class="scroll-indicator fade-in-up" style="transition-delay: 1s;">
                <span class="scroll-text">SCROLL_DOWN</span>
                <div class="scroll-line"></div>
            </div>
        </div>
    </div>
</header>

<script>
    const text = "Web Developer";
    const typingText = document.querySelector('.typing-text');
    let i = 0;

    function typeWriter() {
        if (i < text.length && typingText) {
            typingText.innerHTML += text.charAt(i);
            i++;
            setTimeout(typeWriter, 100);
        }
    }
    
    // Start typing after a delay
    setTimeout(typeWriter, 1000);
</script>

<style>
    .hero-header {
        padding: 10rem 0 6rem;
        position: relative;
        overflow: hidden;
        min-height: 90vh;
        display: flex;
        align-items: center;
        background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
    }

    .synthwave-grid {
        position: absolute;
        bottom: -30%;
        left: -50%;
        width: 200%;
        height: 100%;
        background-image: 
            linear-gradient(var(--color-primary) 1px, transparent 1px),
            linear-gradient(90deg, var(--color-primary) 1px, transparent 1px);
        background-size: 40px 40px;
        background-position: 0 0;
        transform: perspective(500px) rotateX(60deg);
        opacity: 0.2;
        animation: grid-move 20s linear infinite;
        z-index: 0;
        mask-image: linear-gradient(to top, black 40%, transparent 100%);
        -webkit-mask-image: linear-gradient(to top, black 40%, transparent 100%);
    }

    @keyframes grid-move {
        0% {
            transform: perspective(500px) rotateX(60deg) translateY(0);
        }
        100% {
            transform: perspective(500px) rotateX(60deg) translateY(40px);
        }
    }

    /* Floating Shapes */
    .floating-shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border: 1px solid var(--color-primary);
        opacity: 0.3;
        animation: float-rotate 20s infinite linear;
    }

    .cube {
        top: 20%;
        right: 15%;
        width: 100px;
        height: 100px;
        transform-style: preserve-3d;
        animation-duration: 25s;
    }

    .cube::before, .cube::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: inherit;
    }
    
    .cube::before { transform: translateZ(-50px); }
    .cube::after { transform: translateZ(50px); }

    .pyramid {
        bottom: 30%;
        left: 10%;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 50px 86.6px 50px;
        border-color: transparent transparent var(--color-primary) transparent;
        transform-style: preserve-3d;
        animation-duration: 30s;
        opacity: 0.2;
    }

    @keyframes float-rotate {
        0% { transform: translateY(0) rotateX(0) rotateY(0); }
        50% { transform: translateY(-20px) rotateX(180deg) rotateY(180deg); }
        100% { transform: translateY(0) rotateX(360deg) rotateY(360deg); }
    }

    /* Fade Overlay */
    .hero-fade {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 150px;
        background: linear-gradient(to bottom, transparent, var(--color-bg));
        z-index: 5;
        pointer-events: none;
    }

    .relative {
        position: relative;
        z-index: 2;
        width: 100%;
    }



    .hero-title {
        font-size: 6rem;
        margin-bottom: 1rem;
        color: var(--color-text);
        letter-spacing: -0.05em;
        line-height: 1;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
    }

    .hero-subtitle {
        font-family: var(--font-body);
        font-size: 2.5rem;
        color: var(--color-text-muted);
        font-weight: 400;
        line-height: 1.4;
        text-transform: none;
        max-width: 900px;
        margin-bottom: 1rem;
    }
    
    .typing-text {
        color: var(--color-primary);
        font-weight: 700;
        text-shadow: 0 0 5px var(--color-primary);
    }
    
    .cursor {
        display: inline-block;
        width: 3px;
        background-color: var(--color-primary);
        animation: blink 1s infinite;
        margin-left: 5px;
        box-shadow: 0 0 5px var(--color-primary);
    }
    
    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }
    
    .hero-location {
        font-family: var(--font-mono);
        color: var(--color-accent);
        font-size: 1rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        opacity: 0.8;
    }
    
    .scroll-indicator {
        position: absolute;
        bottom: -100px;
        left: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        z-index: 10;
    }
    
    .scroll-text {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-text-muted);
        writing-mode: vertical-rl;
        letter-spacing: 2px;
        margin-bottom: 0;
    }
    
    .scroll-line {
        width: 1px;
        height: 60px;
        background: linear-gradient(to bottom, var(--color-primary), transparent);
        box-shadow: 0 0 5px var(--color-primary);
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 3.5rem;
        }
        .hero-subtitle {
            font-size: 1.8rem;
        }
        .scroll-indicator {
            bottom: 1rem;
        }
    }
</style>

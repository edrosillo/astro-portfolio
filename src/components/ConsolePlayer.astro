---
interface Props {
    videoId: string;
}

const { videoId } = Astro.props;
---

<div class="player-wrapper">
    <div class="monitor-frame">
        <div class="screen" id="player-container">
            <div id="youtube-player" data-video-id={videoId}></div>
        </div>

        <div class="controls-bar">
            <div class="status-light"></div>
            <div class="brand">RETRO-VISION</div>
            <div class="playback-controls">
                <button class="control-btn" id="btn-play">
                    <span class="icon">▶</span> PLAY
                </button>
                <button class="control-btn" id="btn-pause">
                    <span class="icon">❚❚</span> PAUSE
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Load YouTube API
    const tag = document.createElement("script");
    tag.src = "https://www.youtube.com/iframe_api";
    const firstScriptTag = document.getElementsByTagName("script")[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    let player;
    const playerDiv = document.getElementById("youtube-player");
    const videoId = playerDiv.dataset.videoId;

    window.onYouTubeIframeAPIReady = function () {
        player = new YT.Player("youtube-player", {
            height: "100%",
            width: "100%",
            videoId: videoId,
            playerVars: {
                playsinline: 1,
                controls: 0,
                modestbranding: 1,
                rel: 0,
            },
            events: {
                onReady: onPlayerReady,
            },
        });
    };

    function onPlayerReady(event) {
        document.getElementById("btn-play").addEventListener("click", () => {
            player.playVideo();
        });

        document.getElementById("btn-pause").addEventListener("click", () => {
            player.pauseVideo();
        });
    }
</script>

<style>
    .player-wrapper {
        max-width: 900px;
        margin: 0 auto 3rem;
    }

    .monitor-frame {
        background: #1a1a1a;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border: 1px solid #333;
    }

    .screen {
        aspect-ratio: 16/9;
        background: #000;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .controls-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem 1rem;
        background: #222;
        border-radius: 4px;
    }

    .status-light {
        width: 8px;
        height: 8px;
        background: var(--color-secondary);
        border-radius: 50%;
        box-shadow: 0 0 5px var(--color-secondary);
    }

    .brand {
        font-family: var(--font-heading);
        font-size: 0.7rem;
        color: #555;
        letter-spacing: 2px;
    }

    .playback-controls {
        display: flex;
        gap: 1rem;
    }

    .control-btn {
        background: transparent;
        border: 1px solid #444;
        color: var(--color-text-muted);
        padding: 0.4rem 1rem;
        border-radius: 4px;
        font-family: var(--font-body);
        font-size: 0.8rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
    }

    .control-btn:hover {
        border-color: var(--color-primary);
        color: var(--color-primary);
        background: rgba(255, 0, 255, 0.05);
    }

    .icon {
        font-size: 0.7rem;
    }
</style>
